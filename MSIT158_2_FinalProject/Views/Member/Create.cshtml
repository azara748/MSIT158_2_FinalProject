                    });

                    const data = await response.text();
                    const json = JSON.parse(data);
                    const message = json.message;
                    const Jname = json.m.memberName;
                    console.log(Jname);
                    divResult.innerHTML = `<p>會員姓名：${Jname}：${message}</p>`;
