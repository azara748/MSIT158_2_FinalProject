                    const fromdata = new FormData(myForm);
                    //測試FormData中有無資料
                    for (const pair of fromdata.entries()) {
                        console.log(pair[0], pair[1]);
                    }

                    console.log("test2");
                    const url = 'https://localhost:7160/api/TMembers/CreateCheckPassword';
                    const response = await fetch(url, {
                        method: 'POST',
