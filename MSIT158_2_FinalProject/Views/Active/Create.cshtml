@model MSIT158_2_FinalProject.Models.TActive

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout_Backstage";
}

<h4>TActive</h4>
<hr />
<div>
    <div style="display:flex; flex-direction:row; justify-content:center;">
        <form asp-action="Create" id="Activeform">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ActiveName" class="control-label">活動名稱</label>
                <input asp-for="ActiveName" class="form-control" />
                <span asp-validation-for="ActiveName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label">起始日期</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="control-label">結束日期</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Discount" class="control-label">折扣</label>
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">描述</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActiveImage" class="control-label">活動照片</label>
                <input asp-for="ActiveImage" class="form-control" />
                <span asp-validation-for="ActiveImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $("#Activeform").validate({
                rules: {
                    ActiveName: {
                        required: true
                    },
                    StartDate: {
                        required: true
                    },
                    EndDate: {
                        required: true
                    },
                    Discount: {
                        required: true
                    },
                    Description: {
                        required: true
                    },
                    ActiveImage: {
                        required: true
                    }
                },
                messages: {
                    ActiveName: {
                        required: "請輸入活動名稱"
                    },
                    StartDate: {
                        required: "請輸入起始日期"
                    },
                    EndDate: {
                        required: "請輸入結束日期"
                    },
                    Discount: {
                        required: "請輸入折扣"
                    },
                    Description: {
                        required: "請輸入描述"
                    },
                    ActiveImage: {
                        required: "請輸入活動照片"
                    }
                }
            });
        });
    </script>
}
