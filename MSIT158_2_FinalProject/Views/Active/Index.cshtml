                }
            }
        });
        document.getElementById('chkSubCategoryId').addEventListener('change', function () {
            var sth = document.getElementById('SubCategoryId-th');
            var std = document.getElementsByClassName('SubCategoryId-td');
            if (!this.checked) {
                sth.style.display = 'none';
                for (var i = 0; i < std.length; i++) {
                    std[i].style.display = 'none';
                }
            } else {
                sth.style.display = '';
                for (var i = 0; i < std.length; i++) {
                    std[i].style.display = '';
                }
            }
        });
        document.getElementById('chkDiscount').addEventListener('change', function () {
            var sth = document.getElementById('Discount-th');
            var std = document.getElementsByClassName('Discount-td');
            if (!this.checked) {
                sth.style.display = 'none';
                for (var i = 0; i < std.length; i++) {
                    std[i].style.display = 'none';
                }
            } else {
                sth.style.display = '';
                for (var i = 0; i < std.length; i++) {
                    std[i].style.display = '';
                }
            }
        });
        document.getElementById('chkDescription').addEventListener('change', function () {
            var sth = document.getElementById('Description-th');
            var std = document.getElementsByClassName('Description-td');
            if (!this.checked) {
                sth.style.display = 'none';
                for (var i = 0; i < std.length; i++) {
                    std[i].style.display = 'none';
                }
            } else {
                sth.style.display = '';
                for (var i = 0; i < std.length; i++) {
                    std[i].style.display = '';
                }
            }
        });
    </script>
}